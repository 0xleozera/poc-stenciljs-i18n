{
  "name": "poc-stenciljs-i18n",
  "description": "POC i18n with StencilJS",
  "private": true,
  "workspaces": {
    "packages": ["packages/*"],
    "nohoist": [
      "**/@types/**"
    ]

  },
  "scripts": {
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "refresh": "yarn clean -y && yarn bootstrap",
    "start": "lerna run start --scope core",
    "build": "lerna run build --scope '{core,angular-workspace,component-library-react,component-library-vue}'"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "lerna": "^6.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.9.3"
  }
}
